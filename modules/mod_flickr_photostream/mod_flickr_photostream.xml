			<field name="project_border" type="text" default="0px" label="Images Border:" description="choose border for your images" />
			<field name="project_colorborder" type="color" default="#000000" label="Border color:" description="choose border color for your images" />
			<field name="project_padding" type="text" default="0px" label="Images padding:" description="padding between the border and the image" />
			
